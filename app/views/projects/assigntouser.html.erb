
 <div class="col-sm-4 col-sm-2-offset" >
        Select a project
        <table class="table borderless">
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td style="border-top: none">
                    <%= radio_button_tag(:project_id, project.id) %>
                    <%= label_tag(:project_project_id, project.name+'|'+project.code)  %>

                 
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>



    <div class="col-sm-4 col-sm-2-offset" >
        Select a user
        <table class="table table-default">
          
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td style="border-top: none">
                    <%= radio_button_tag(:user_id, user.id) %>
                    <%= label_tag(:user_user_id, user.email)  %>

                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>

    <%= link_to t('.assign', :default => t("helpers.links.assign")),
                projects_path,
                :class => 'btn btn-primary' %>
            
