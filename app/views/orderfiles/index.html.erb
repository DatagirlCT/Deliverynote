<%- model_class = Orderfile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:projectcode) %></th>
      <th><%= model_class.human_attribute_name(:projectname) %></th>
      <th><%= model_class.human_attribute_name(:orderno) %></th>
      <th><%= model_class.human_attribute_name(:orderdate) %></th>
      <th><%= model_class.human_attribute_name(:suppliername) %></th>
      <th><%= model_class.human_attribute_name(:orderitem) %></th>
      <th><%= model_class.human_attribute_name(:orderqty) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @orderfiles.each do |orderfile| %>
      <tr>
        <td><%= link_to orderfile.id, orderfile_path(orderfile) %></td>
        <td><%= orderfile.projectcode %></td>
        <td><%= orderfile.projectname %></td>
        <td><%= orderfile.orderno %></td>
        <td><%= orderfile.orderdate %></td>
        <td><%= orderfile.suppliername %></td>
        <td><%= orderfile.orderitem %></td>
        <td><%= orderfile.orderqty %></td>
        <td><%=l orderfile.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_orderfile_path(orderfile), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      orderfile_path(orderfile),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.create order")),
            new_order_path,
            :class => 'btn btn-primary' %>
