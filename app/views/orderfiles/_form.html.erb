<%= form_for @orderfile, :html => { :class => "form-horizontal orderfile" } do |f| %>

  <% if @orderfile.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@orderfile.errors.count, "error") %> prohibited this orderfile from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @orderfile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :projectcode, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :projectcode, :class => 'form-control' %>
    </div>
    <%=f.error_span(:projectcode) %>
  </div>
  <div class="form-group">
    <%= f.label :projectname, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :projectname, :class => 'form-control' %>
    </div>
    <%=f.error_span(:projectname) %>
  </div>
  <div class="form-group">
    <%= f.label :orderno, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :orderno, :class => 'form-control' %>
    </div>
    <%=f.error_span(:orderno) %>
  </div>
  <div class="form-group">
    <%= f.label :orderdate, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :orderdate, :class => 'form-control' %>
    </div>
    <%=f.error_span(:orderdate) %>
  </div>
  <div class="form-group">
    <%= f.label :suppliername, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :suppliername, :class => 'form-control' %>
    </div>
    <%=f.error_span(:suppliername) %>
  </div>
  <div class="form-group">
    <%= f.label :orderitem, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :orderitem, :class => 'form-control' %>
    </div>
    <%=f.error_span(:orderitem) %>
  </div>
  <div class="form-group">
    <%= f.label :orderqty, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :orderqty, :class => 'form-control' %>
    </div>
    <%=f.error_span(:orderqty) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orderfiles_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
