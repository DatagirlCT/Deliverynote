<%= form_for @order_item, :html => { :class => "form-horizontal order_item" } do |f| %>

  <% if @order_item.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@order_item.errors.count, "error") %> prohibited this order_item from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @order_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :itemdescription, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :itemdescription, :class => 'form-control' %>
    </div>
    <%=f.error_span(:itemdescription) %>
  </div>
  <div class="form-group">
    <%= f.label :orderqty, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :orderqty, :class => 'form-control' %>
    </div>
    <%=f.error_span(:orderqty) %>
  </div>
  <div class="form-group">
    <%= f.label :receivedqty, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :receivedqty, :class => 'form-control' %>
    </div>
    <%=f.error_span(:receivedqty) %>
  </div>
  <div class="form-group">
    <%= f.label :remainingqty, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :remainingqty, :class => 'form-control' %>
    </div>
    <%=f.error_span(:remainingqty) %>
  </div>
  <div class="form-group">
    <%= f.label :receivedby, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :receivedby, :class => 'form-control' %>
    </div>
    <%=f.error_span(:receivedby) %>
  </div>
  <div class="form-group">
    <%= f.label :order_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :order_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:order_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                order_items_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
