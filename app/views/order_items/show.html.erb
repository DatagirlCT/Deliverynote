<%- model_class = OrderItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:itemdescription) %>:</strong></dt>
  <dd><%= @order_item.itemdescription %></dd>
  <dt><strong><%= model_class.human_attribute_name(:orderqty) %>:</strong></dt>
  <dd><%= @order_item.orderqty %></dd>
  <dt><strong><%= model_class.human_attribute_name(:receivedqty) %>:</strong></dt>
  <dd><%= @order_item.receivedqty %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remainingqty) %>:</strong></dt>
  <dd><%= @order_item.remainingqty %></dd>
  <dt><strong><%= model_class.human_attribute_name(:receivedby) %>:</strong></dt>
  <dd><%= @order_item.receivedby %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_id) %>:</strong></dt>
  <dd><%= @order_item.order_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              order_items_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_item_path(@order_item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_item_path(@order_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
