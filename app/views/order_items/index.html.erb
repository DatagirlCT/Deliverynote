<%- model_class = OrderItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:itemdescription) %></th>
      <th><%= model_class.human_attribute_name(:orderqty) %></th>
      <th><%= model_class.human_attribute_name(:receivedqty) %></th>
      <th><%= model_class.human_attribute_name(:remainingqty) %></th>
      <th><%= model_class.human_attribute_name(:receivedby) %></th>
      <th><%= model_class.human_attribute_name(:order_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= link_to order_item.id, order_item_path(order_item) %></td>
        <td><%= order_item.itemdescription %></td>
        <td><%= order_item.orderqty %></td>
        <td><%= order_item.receivedqty %></td>
        <td><%= order_item.remainingqty %></td>
        <td><%= order_item.receivedby %></td>
        <td><%= order_item.order_id %></td>
        <td><%=l order_item.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_order_item_path(order_item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      order_item_path(order_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_order_item_path,
            :class => 'btn btn-primary' %>
